<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Remove "Powered by Odoo" from portal templates -->
        <template id="portal_footer_no_branding"
            inherit_id="portal.footer"
            name="Remove Odoo Branding from Portal Footer"
            active="False"
            customize_show="True">
            <xpath expr="//div[@class='o_footer_copyright']//p[contains(., 'Powered by')]"
                position="replace">
                <!-- Powered by Odoo footer removed -->
            </xpath>
        </template>

        <!-- Remove from portal email templates -->
        <template id="portal_invite_no_branding"
            inherit_id="portal.mail_template_data_portal_welcome"
            name="Remove Odoo Branding from Portal Invite Email"
            active="False"
            customize_show="True">
            <xpath expr="//td[p[contains(., 'Powered by')]]" position="replace">
                <!-- Powered by Odoo footer removed -->
            </xpath>
        </template>
    </data>
</odoo>
