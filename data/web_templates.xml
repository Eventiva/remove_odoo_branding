<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Remove "Powered by Odoo" from web client templates -->
        <template id="web_login_no_branding"
            inherit_id="web.login"
            name="Remove Odoo Branding from Login Page"
            active="False"
            customize_show="True">
            <xpath expr="//div[@class='o_login_copyright']" position="replace">
                <!-- Powered by Odoo footer removed -->
            </xpath>
        </template>

        <!-- Remove from database manager -->
        <template id="web_database_manager_no_branding"
            inherit_id="web.database_manager"
            name="Remove Odoo Branding from Database Manager"
            active="False"
            customize_show="True">
            <xpath expr="//div[@class='o_database_list_footer']//a[contains(@href, 'odoo.com')]"
                position="replace">
                <!-- Powered by Odoo link removed -->
            </xpath>
        </template>
    </data>
</odoo>
