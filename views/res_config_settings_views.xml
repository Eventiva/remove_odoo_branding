<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add Email Footer setting to General Settings -->
        <record id="res_config_settings_view_form_inherit_email_footer" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.email.footer</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="mail.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='mail_templates_setting']" position="after">
                    <setting id="email_footer_setting"
                             string="Email Footer"
                             help="Add a standardized footer to all transactional emails">
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="email_footer" class="col-lg-3 o_light_label"/>
                                <field name="email_footer"
                                       class="oe_inline"
                                       widget="html_mail"
                                       placeholder="e.g. Disclaimer text, legal information, or custom company message..."
                                       options="{'resizable': true, 'style-inline': true}"/>
                            </div>
                            <div class="text-muted">
                                This footer will appear in all transactional emails including:
                                <ul>
                                    <li>Helpdesk tickets</li>
                                    <li>CRM and Sales communications</li>
                                    <li>Event tracks and registrations</li>
                                    <li>And all other system notifications</li>
                                </ul>
                                Note: This does not affect mass mailing/marketing emails.
                            </div>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
